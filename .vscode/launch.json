    "version": "0.2.0",
    "configurations": [        
        {
            "name": "Debug Jest Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
            "args": [
              "--collectCoverage=false",
              "--colors",
              "--config",
              "${workspaceRoot}/jest.config.js",
              "--runInBand"
            ],
            "skipFiles": [
              "${workspaceRoot}/../../node_modules/**/*",
              "<node_internals>/**/*"
            ],
            "windows": {
              "skipFiles": ["C:\\**\\node_modules\\**\\*", "<node_internals>/**/*"]
            }
        }
    ]
}
